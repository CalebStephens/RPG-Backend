model Build{
  id Int @id @default(autoincrement())
  title String
  description String
  players Player[]
}

model Player {
  name String @unique
  health Int
  buildId Int
  build Build @relation(fields: [buildId], references: [id],onDelete: Cascade)
}

model User {
  id                  Int                  @id @default(autoincrement()) 
  username            String               @unique
  password            String
  role                Role                 @default(BASIC)
  createdAt           DateTime             @default(now())
}

