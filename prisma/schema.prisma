// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  BASIC
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Build {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  stats       Json?
  character   Character[]
}

model Character {
  id            Int              @id @default(autoincrement())
  name          String           @unique
  gender        Gender
  stats         Json
  buildId       Int
  userId        Int
  locationId    Int
  currency      Int
  XP            Int
  build         Build           @relation(fields: [buildId], references: [id])
  user          User            @relation(fields: [userId], references: [id])
  location   Location            @relation(fields: [locationId], references: [id])
  itemCharacter ItemChraracter[]
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  password   String
  role       Role        @default(BASIC)
  createdAt  DateTime    @default(now())
  characters Character[]
}

model Item {
  id            Int              @id @default(autoincrement())
  name          String
  type          String
  level         Int
  rarity        String
  buyCost       Int
  sellPrice     Int
  itemCharacter ItemChraracter[]
}

model ItemChraracter {
  id          Int       @id @default(autoincrement())
  itemId      Int
  characterId Int
  item        Item      @relation(fields: [itemId], references: [id])
  character   Character @relation(fields: [characterId], references: [id])
}

model Location {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String
  items       Int[]
  character   Character[]
}
